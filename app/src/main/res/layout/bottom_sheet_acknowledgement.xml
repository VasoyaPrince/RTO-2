<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/edges_rounded_corner"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp"
       >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_14sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/voice"
           />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/fontmedium"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:text="Permission Denied"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/fontnormal"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:text="Kindly allow audio permission from app settings to enable voice input feature."
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/secondaryBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/fontmedium"
                android:background="@drawable/light_grey_background_border"
                android:gravity="center"
                android:text="Not Now"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/cta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/black_background_border"
                android:gravity="center"
                android:text="Open Setting"
                android:fontFamily="@font/fontmedium"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
               />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
